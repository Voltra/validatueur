{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "ESNext",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"declaration": true,
		"declarationDir": "./lib/",
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
        "noImplicitThis": true,
        "moduleResolution": "node"
	},
	"exclude": ["node_modules", "lib", "tests", "dist"],
	"include": ["src"]
}
